generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
 
 // Enums
 enum Role {
   ADMIN
   MANAGER
   TECHNICIAN
   USER
 }

 enum MaintenanceType {
   CORRECTIVE
   PREVENTIVE
 }

 enum RequestStatus {
   NEW
   IN_PROGRESS
   REPAIRED
 }

 // Models
 model User {
   id             Int       @id @default(autoincrement())
   name           String
   email          String    @unique
   password       String
   role           Role      @default(USER)

  // relations
   assignedRequests MaintenanceRequest[] @relation("TechnicianRequests")
   teamMemberships  TeamMember[]
   equipment        Equipment[] @relation("TechnicianEquipment")
  performedLogs    MaintenanceLog[]

   createdAt      DateTime  @default(now())
   updatedAt      DateTime  @updatedAt
 }

 model MaintenanceTeam {
   id        Int      @id @default(autoincrement())
   name      String
   company   String?

   members   TeamMember[]
   equipment Equipment[]
   requests  MaintenanceRequest[]

   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt
 }

 model TeamMember {
   teamId   Int
   userId   Int
   team     MaintenanceTeam @relation(fields: [teamId], references: [id])
   user     User            @relation(fields: [userId], references: [id])
   createdAt DateTime @default(now())

   @@id([teamId, userId])
 }

 model EquipmentCategory {
   id        Int       @id @default(autoincrement())
   name      String    @unique
   company   String?

   equipment Equipment[]
 }

 model Equipment {
   id           Int      @id @default(autoincrement())
   name         String
   serialNumber String   @unique
   employeeName String?
   department   String?
   location     String?
   purchaseDate DateTime?
   warrantyEnd  DateTime?
   isScrapped   Boolean  @default(false)
   scrapDate    DateTime?

   categoryId   Int
   category     EquipmentCategory @relation(fields: [categoryId], references: [id])

   teamId       Int
   team         MaintenanceTeam   @relation(fields: [teamId], references: [id])

   technicianId Int?
   technician   User?    @relation("TechnicianEquipment", fields: [technicianId], references: [id])

   workCenterId Int?
   workCenter   WorkCenter? @relation(fields: [workCenterId], references: [id])

   requests     MaintenanceRequest[]

   createdAt    DateTime @default(now())
   updatedAt    DateTime @updatedAt
 }

 model MaintenanceRequest {
   id            Int           @id @default(autoincrement())
   subject       String
   type          MaintenanceType
   status        RequestStatus @default(NEW)

   equipmentId   Int
   equipment     Equipment     @relation(fields: [equipmentId], references: [id])

   teamId        Int
   team          MaintenanceTeam @relation(fields: [teamId], references: [id])

   technicianId  Int?
   technician    User? @relation("TechnicianRequests", fields: [technicianId], references: [id])

   scheduledDate DateTime?
   durationHours Float?

   logs          MaintenanceLog[]

   createdAt     DateTime @default(now())
   updatedAt     DateTime @updatedAt

   @@index([status])
   @@index([teamId])
   @@index([scheduledDate])
 }

 model MaintenanceLog {
   id            Int      @id @default(autoincrement())
   requestId     Int
   request       MaintenanceRequest @relation(fields: [requestId], references: [id])
   action        String
   fromStatus    RequestStatus?
   toStatus      RequestStatus?

   performedById Int?
   performedBy   User?    @relation(fields: [performedById], references: [id])

   notes         String?
   durationHours Float?
   createdAt     DateTime @default(now())
 }

 model WorkCenter {
   id          Int      @id @default(autoincrement())
   name        String   @unique
   code        String?
   location    String?
   costPerHour Float?
   capacity    Int?
   oeeTarget   Float?

   equipment   Equipment[]

   createdAt   DateTime @default(now())
   updatedAt   DateTime @updatedAt
 }
